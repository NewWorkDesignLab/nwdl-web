<%= render 'nwdl/shared/page_wrapper' do %>
  <%# RICH CONTENT ABOVE ARTICLES %>
  <div class="nwdl-rich-content-wrapper">
    <%= content.html :rich_content %>
  </div>

  <%# ARTICLES PRESENTER %>
  <div class="row g-5 mt-2 mb-5 justify-content-start">
    <%= render 'nwdl/shared/resource_iterator', resource_name: $spina_articles, nil_message: "Leider ist hier noch nichts zu sehen." do |resource| %>
      <%= render 'nwdl/shared/resource_preview', resource: resource %>
    <% end %>
  </div>
<% end %>

