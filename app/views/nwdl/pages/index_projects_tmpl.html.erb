<%= render 'nwdl/shared/page_wrapper' do %>
  <%# IMAGES %>
  <div class="image-anchor">
    <div class="project-gear index-background"><%= render 'nwdl/shared/images/zahnrad' %></div>
  </div>

  <%# RICH CONTENT ABOVE PROJECTS %>
  <div class="nwdl-rich-content-wrapper">
    <%= content.html :rich_content %>
  </div>

  <%# PROJECT PRESENTER %>
  <div class="row g-5 mt-2 mb-5 justify-content-start">
    <%= render 'nwdl/shared/resource_iterator', resource_name: "projects", nil_message: "Leider ist hier noch nichts zu sehen." do |resource| %>
      <%= render 'nwdl/shared/resource_preview', resource: resource %>
    <% end %>
  </div>
<% end %>

<%# NEWSLETTER %>
<%= render 'nwdl/shared/newsletter' %>
