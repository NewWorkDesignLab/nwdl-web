<div class="container-xl">
  <%# IMAGE NEWSLETTER KREISE %>
  <div class="image-anchor mt-8">
        <div class="newsletter-kreise index-background"><%= render 'nwdl/shared/images/newsletter_kreise' %></div>
  </div>

  <%# NEWSLETTER %>
  <div class="row pt-5 justify-content-center nwdl-bg-blue-dark gx-0 rounded">

    <div class="col-12 col-sm-9 col-md-12 nwdl-uppercase-header gx-0 px-3 px-lg-6 mb-n5">
      <%= current_account.content.html :newsletter_heading %>
    </div>

    <%# NEWSLETTER MAIN %>
    <div class="col-12 col-md-7 col-lg-8 py-5 mt-2 nwdl-uppercase-header gx-0 row justify-content-center">
      <div class="col-12 col-sm-9 col-md-12 d-flex flex-column align-items-stretch px-3 pe-md-6 px-lg-6 index-foreground">

        <%= current_account.content.html :newsletter_text %>
        <form class="mt-3">
          <div class="mb-2">
            <label for="newsletterNameInput" class="form-label">Name</label>
            <input type="text" class="form-control" id="newsletterNameInput">
          </div>
          <div class="mb-5">
            <label for="newsletterEmailInput" class="form-label">E-Mail</label>
            <input type="email" class="form-control" id="newsletterEmailInput">
          </div>
          <button type="submit" class="btn btn-nwdl">Anmelden</button>
        </form>

      </div>
    </div>

    <%# NEWSLETTER KONTAKT %>
    <div class="col-12 col-md-5 col-lg-4 py-5 mt-2 nwdl-bg-orange-dark angled-bg gx-0 row justify-content-center">
      <div class="col-12 col-sm-9 col-md-12 d-flex flex-column align-items-stretch px-3 index-foreground">

        <%# IMAGE NEWSLETTER WOLKE %>
        <div class="image-anchor">
          <div class="newsletter-wolke index-foreground"><%= render 'nwdl/shared/images/newsletter_wolke' %></div>
        </div>

        <div class="col-12 col-sm-8 col-md-12 gx-0">
          <div class="mb-4"><%= current_account.content.html :main_address %></div>
          <div><%= current_account.content.html :main_contact %></div>
        </div>

      </div>
    </div>

  </div>

  <%# IMAGE FARBFLECK PINK %>
  <div class="image-anchor">
        <div class="farbfleck-pink index-background"><%= render 'nwdl/shared/images/farbfleck_pink' %></div>
  </div>
</div>
