<%= link_to resource.materialized_path, class: "col-6 col-sm-4 col-md-3 text-reset text-decoration-none" do %>
  <div class="nwdl-quatric-wrapper">
    <%= resource.content.image_tag(:thumbnail, {}, {class: "rounded object-fit-cover"}) %>
  </div>
  <p class="mt-2 mb-0"><strong><%= resource.title %></strong></p>
  <%= resource.content.html(:summary) %>
<% end %>
