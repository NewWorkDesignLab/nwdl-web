<%= link_to resource.materialized_path, class: "w-full" do %>
  <div class="nwdl-quatric-wrapper">
    <%= resource.content.image_tag(:thumbnail, {}, {class: "rounded object-cover"}) %>
  </div>
  <p class="mt-2 mb-0 nwdl-high-contrast"><strong><%= resource.title %></strong></p>
  <div class="nwdl-high-contrast"><%= resource.content.html(:summary) %></div>
<% end %>
