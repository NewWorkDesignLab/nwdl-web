<%= link_to resource.materialized_path, class: "relative" do %>
  <%= resource.content.image_tag(:thumbnail, {}, {class: "w-full h-28 rounded object-cover"}) %>

  <p class="mt-1 mb-0 nwdl-high-contrast"><strong><%= resource.title %></strong></p>
  <div class="nwdl-high-contrast"><%= resource.content.html :summary %></div>
<% end %>
