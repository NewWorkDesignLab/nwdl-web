<div class="mt-6">
  <label class="font-medium text-gray-700"><%= f.object.title %></label>
  <div class="flex flex-col md:flex-row h-screen w-screen mt-1 gap-3">
    <div class="flex-auto">
      <%= f.label :author_id, "Autor:in", class: "block text-sm leading-5 font-medium text-gray-700" %>
      <%= f.select :author_id, Spina::User.all.pluck(:name, :id), { include_blank: "Nicht angegeben" }, { class: "w-full" } %>
    </div>
    <div class="flex-auto">
      <%= f.label :datetime, "Datum und Uhrzeit", class: "block text-sm leading-5 font-medium text-gray-700" %>
      <%= f.datetime_field :datetime, class: "w-full" %>
    </div>
    <div class="flex-auto">
      <%= f.label :read_time, "Angabe Lese-/Videozeit", class: "block text-sm leading-5 font-medium text-gray-700" %>
      <%= f.text_field :read_time, class: "w-full" %>
    </div>
  </div>
</div>
